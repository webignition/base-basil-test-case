{
    "name": "webignition/base-basil-test-case",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/base-basil-test-case",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BaseBasilTestCase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BaseBasilTestCase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-ecs": "./vendor/bin/ecs check src tests --ansi --no-progress-bar --config ecs.php",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-ecs",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test-unit": "./vendor/bin/phpunit --colors=always tests/Unit",
        "test-functional": "./vendor/bin/phpunit --colors=always tests/Functional",
        "test": [
            "@test-unit",
            "@test-functional"
        ],
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "symfony/panther": "^0.7",
        "phpunit/phpunit": "~9.0",
        "webignition/symfony-panther-dom-crawler-navigator": ">=0.19,<1",
        "webignition/webdriver-element-inspector": ">=0.8,<1",
        "webignition/webdriver-element-mutator": ">=0.4,<1",
        "webignition/basil-models": ">=0.54,<1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.75",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1",
        "symplify/easy-coding-standard": "^9.1",
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-mockery": "^0.12.7",
        "webignition/object-reflector": "^0.2.0"
    }
}
